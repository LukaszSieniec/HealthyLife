<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textViewDay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/twelveIntuit"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:textSize="@dimen/twentySixIntuit"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/fourIntuit"
        android:layout_marginBottom="@dimen/twelveIntuit"
        android:layout_weight="0.4">

        <TextView
            android:id="@+id/textViewConsumedCaloriesItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_product_menu_search"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/eightIntuit"
            android:paddingTop="@dimen/eightIntuit"
            android:paddingBottom="@dimen/eightIntuit"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/twentyFourIntuit" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fourIntuit"
        android:layout_marginBottom="@dimen/twelveIntuit"
        android:layout_weight="0.4">

        <TextView
            android:id="@+id/textViewResultCaloriesOfDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="@dimen/sixteenIntuit"
            android:paddingTop="@dimen/eightIntuit"
            android:paddingBottom="@dimen/eightIntuit"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/twentyFourIntuit" />
    </androidx.cardview.widget.CardView>

</LinearLayout>