<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/dividerMeal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneIntuit"
        android:layout_marginStart="@dimen/thirtyTwoIntuit"
        android:layout_marginLeft="@dimen/thirtyTwoIntuit"
        android:alpha="0"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/linearLayoutMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerMeal"
        android:background="#26660EB3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMealInformation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:paddingLeft="@dimen/sixteenIntuit"
            android:paddingTop="@dimen/sixteenIntuit"
            android:paddingRight="@dimen/sixteenIntuit"
            android:paddingBottom="@dimen/sixteenIntuit"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteenIntuit" />

        <ImageView

            android:id="@+id/imageViewArrowExpandableRecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sixIntuit"
            android:layout_weight="0.1"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_arrow_drop_down_meal" />

    </LinearLayout>


</RelativeLayout>